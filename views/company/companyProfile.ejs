<% layout('../includes/layout.ejs') %>

<section>
    <h1 class="alert alert-primary">Company Profile</h1>
    <div class="row">
        <div class="col-3">
            <div class="companylogo">
                <img src="https://shorturl.at/rg7cJ" class="img-fluid shadow" alt="">
            </div>
            <br>
            <div class="nav flex-column nav-pills" id="v-pills-tab" role="tablist" aria-orientation="vertical">
                <button class="nav-link active" id="v-pills-home-tab" data-toggle="pill" data-target="#v-pills-home"
                    type="button" role="tab" aria-controls="v-pills-home" aria-selected="true">Company Details</button>
                <button class="nav-link" id="v-pills-profile-tab" data-toggle="pill" data-target="#v-pills-profile"
                    type="button" role="tab" aria-controls="v-pills-profile" aria-selected="false">Contractor
                    details</button>
                <button class="nav-link" id="v-pills-messages-tab" data-toggle="pill" data-target="#v-pills-messages"
                    type="button" role="tab" aria-controls="v-pills-messages" aria-selected="false">Messages</button>
                <button class="nav-link" id="v-pills-settings-tab" data-toggle="pill" data-target="#v-pills-settings"
                    type="button" role="tab" aria-controls="v-pills-settings" aria-selected="false">Settings</button>
            </div>
        </div>
        <div class="col-9">
            <div class="tab-content" id="v-pills-tabContent">
                <div class="tab-pane fade show active" id="v-pills-home" role="tabpanel"
                    aria-labelledby="v-pills-home-tab">
                    <div class="infoBox">
                        <h3 class="alert alert-info">Basic Information</h3>
                        <table class="table table-bordered text-capitalize table-striped">

                            <tr>
                                <td>
                                    <h6 class="m-0">company name</h6>
                                </td>
                                <td>
                                    <p class="m-0"><%=companyData.companyName%></p>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <h6 class="m-0">contact number</h6>
                                </td>
                                <td>
                                    <p class="m-0"><%=companyData.contactNumber%></p>
                                </td>
                            </tr>

                            <tr>
                                <td>
                                    <h6 class="m-0">email</h6>
                                </td>
                                <td>
                                    <p class="m-0"><%=companyData.email%></p>
                                </td>
                            </tr>
                            <tr class="alert alert-warning">
                                <td>
                                    <h6 class="m-0">unit rate (sq meter)</h6>
                                </td>
                                <td>
                                    <p class="m-0">
                                        <%=companyData.unitRate.toLocaleString("en-US", { style: "currency", currency: "USD" })%>
                                    </p>
                                </td>
                            </tr>
                        </table>
                    </div>
                    <div class="infoBox">
                        <h3 class="alert alert-primary">Address</h3>
                        <table class="table table-bordered text-capitalize table-striped">

                            <tr>
                                <td>
                                    <h6 class="m-0">street address</h6>
                                </td>
                                <td>
                                    <p class="m-0"><%=companyData.address.street%></p>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <h6 class="m-0">suburb</h6>
                                </td>
                                <td>
                                    <p class="m-0"><%=companyData.address.suburb%></p>
                                </td>
                            </tr>

                            <tr>
                                <td>
                                    <h6 class="m-0">post code</h6>
                                </td>
                                <td>
                                    <p class="m-0"><%=companyData.address.postCode%></p>
                                </td>
                            </tr>

                        </table>
                    </div>
                    <div class="infoBox">
                        <h3 class=" alert alert-danger">Account Details</h3>
                        <table class="table table-bordered text-capitalize table-striped">
                            <tr>
                                <td>
                                    <h6 class="m-0">bank name</h6>
                                </td>
                                <td>
                                    <p class="m-0"><%=companyData.bankDetails.bankName%></p>
                                </td>
                            </tr>

                            <tr>
                                <td>
                                    <h6 class="m-0">ABN number</h6>
                                </td>
                                <td>
                                    <p class="m-0"><%=companyData.bankDetails.ABN_number%></p>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <h6 class="m-0">BSB</h6>
                                </td>
                                <td>
                                    <p class="m-0"><%=companyData.bankDetails.BSB%></p>
                                </td>
                            </tr>

                            <tr>
                                <td>
                                    <h6 class="m-0">Account Number</h6>
                                </td>
                                <td>
                                    <p class="m-0"><%=companyData.bankDetails.accountNumber%></p>
                                </td>
                            </tr>

                        </table>
                    </div>
                </div>
                <div class="tab-pane fade" id="v-pills-profile" role="tabpanel" aria-labelledby="v-pills-profile-tab">
                    <div class="infoBox">
                        <h3 class=" alert alert-dark">Contracters</h3>
                        <table class="table table-bordered text-capitalize table-striped">
                            <tr>
                                <td>
                                    <h6 class="m-0">bank name</h6>
                                </td>
                                <td>
                                    <p class="m-0"><%=companyData.bankDetails.bankName%></p>
                                </td>
                            </tr>

                            <tr>
                                <td>
                                    <h6 class="m-0">ABN number</h6>
                                </td>
                                <td>
                                    <p class="m-0"><%=companyData.bankDetails.ABN_number%></p>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <h6 class="m-0">BSB</h6>
                                </td>
                                <td>
                                    <p class="m-0"><%=companyData.bankDetails.BSB%></p>
                                </td>
                            </tr>

                            <tr>
                                <td>
                                    <h6 class="m-0">Account Number</h6>
                                </td>
                                <td>
                                    <p class="m-0"><%=companyData.bankDetails.accountNumber%></p>
                                </td>
                            </tr>

                        </table>
                    </div>
                </div>
                <div class="tab-pane fade" id="v-pills-messages" role="tabpanel" aria-labelledby="v-pills-messages-tab">
                    ...</div>
                <div class="tab-pane fade" id="v-pills-settings" role="tabpanel" aria-labelledby="v-pills-settings-tab">
                    ...</div>
            </div>
        </div>
    </div>
</section>