<% layout('../includes/layout.ejs') %>

<section>
    <div class="card">
        <div class="card-header alert alert-primary">
            <h3 class="">User Profile</h3>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-4">
                    <div class="img">

                        <img src="https://cdn-icons-png.flaticon.com/512/149/149071.png" class="img-fluid" alt="">
                        <img src="<%=user.image%>" class="img-fluid" alt="">

                    </div>
                    <ul class="list-group">
                        <li class="list-group-item">
                            <a href="/usermanagement/<%=user._id%>"> User Management</a>
                        </li>

                        <li class="list-group-item active" aria-current="true"><a
                                href="/usermanagement/membership/<%=user._id%>" class="text-white">Update
                                Subscripation Date</a>
                        </li>
                    </ul>
                </div>
                <div class="col-md-8">
                    <div class="border  rounded">
                        <h5 class="alert alert-primary">Basic Information</h5>
                        <table class="table table-striped table-striped text-capitalize">
                            <tr>
                                <th>username</th>
                                <td><%=user.username%></td>
                            </tr>
                            <tr>
                                <th>Full Name</th>
                                <td><%=user.fullname%></td>
                            </tr>
                            <tr>
                                <th>isactive</th>
                                <td>
                                    <h6 class="badge <%=(user.isactive)?'bg-success':'bg-danger'%> badge-danger">
                                        <%=user.isactive%></h6>
                                </td>
                            </tr>
                            <tr>
                                <th>subscriptionExpireOn</th>
                                <td><span><%=(user.subscriptionExpireOn).toLocaleDateString('en-GB', { // British English locale
                                    year: 'numeric',
                                    month: 'long',
                                    day: 'numeric'
                                });%> </span></td>
                            </tr>
                            <tr>
                                <th>email</th>
                                <td><%=user.email%></td>
                            </tr>
                            <tr>
                                <th>contact</th>
                                <td><%=user.contactNumber%></td>
                            </tr>
                        </table>
                    </div>
                    <hr>
                    <div class="border  rounded">
                        <h5 class="alert alert-danger">Company Information</h5>
                        <table class="table table-striped table-striped text-capitalize">
                            <tr>
                                <th>company Name</th>
                                <td><%=user?.companyId.companyName%></td>
                            </tr>
                            <tr>
                                <th>company contact Number</th>
                                <td><%=user?.companyId.contactNumber%></td>
                            </tr>

                            <tr>
                                <th>company email</th>
                                <td><span> <%=user?.companyId.email%></span></td>
                            </tr>
                            <tr>
                                <th>address</th>
                                <td><%=user?.companyId.address%></td>
                            </tr>

                        </table>
                    </div>
                </div>
            </div>
        </div>
        <div class="card-footer  alert-warning">

        </div>
    </div>


</section>