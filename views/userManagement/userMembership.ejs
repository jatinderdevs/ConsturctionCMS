<% layout('../includes/layout.ejs') %>

<section>
    <div class="card">
        <div class="card-header alert alert-success">
            <h3 class="">Edit User Profile</h3>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-4">
                    <div class="img">

                        <img src="https://cdn-icons-png.flaticon.com/512/149/149071.png" class="img-fluid" alt="">
                        <img src="<%=user.image%>" class="img-fluid" alt="">

                    </div>
                    <ul class="list-group">
                        <li class="list-group-item">
                            <a href="/usermanagement/<%=user._id%>"> User Management</a>
                        </li>

                        <li class="list-group-item active" aria-current="true"><a
                                href="/usermanagement/membership/<%=user._id%>" class="text-white">Update
                                Subscripation Date</a>
                        </li>

                    </ul>
                </div>
                <div class="col-md-8">
                    <div class="border  rounded">
                        <h5 class="alert alert-primary">Membership Information</h5>
                        <form action="" method="post">

                            <table class="table table-striped table-striped text-capitalize">
                                <tr>
                                    <th>username</th>
                                    <td><%=user.username%></td>
                                </tr>
                                <tr>
                                    <th>Full Name</th>
                                    <td><%=user.fullname%></td>
                                </tr>
                                <tr class="alert-danger">
                                    <th>isactive</th>
                                    <td>
                                        <select name="isactive" class="form-control" id="isActive">
                                            <option <%=user.isactive?'selected':''%> value="true">True
                                            </option>
                                            <option <%=!user.isactive?'selected':''%> value="false">False</option>
                                        </select>

                                    </td>
                                </tr>
                                <tr class="alert-danger">
                                    <th>subscriptionExpireOn</th>
                                    <td>
                                        <input type="date" class="form-control" value="<%=(user.subscriptionExpireOn).toLocaleDateString('en-CA', { 
                                        year: 'numeric',
                                        month: '2-digit',
                                        day: '2-digit'                                     
                                    }).replace(/\//g, '-');%>" id="expiryDate" name="expiryDate">
                                        <span> </span></td>
                                </tr>
                                <tr>
                                    <th>email</th>
                                    <td><%=user.email%></td>
                                </tr>
                                <tr>
                                    <th>contact</th>
                                    <td><%=user.contactNumber%></td>
                                </tr>
                            </table>
                            <hr>
                            <div class="p-2 text-right">
                                <button class="btn btn-success" type="submit">Update Membership</button>

                            </div>

                        </form>
                    </div>

                </div>
            </div>
        </div>
        <div class="card-footer  alert-secondary text-right">

        </div>
    </div>
</section>

<script>
    const today = new Date().toISOString().split('T')[0]; // Get today's date in YYYY-MM-DD format
    document.getElementById('expirdsyDate').setAttribute('min', today);
</script>