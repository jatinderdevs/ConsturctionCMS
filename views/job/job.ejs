<% layout('../includes/layout.ejs') %>

<section>
    <div class="actionbtn py-4 text-right">
        <form action="/jobinvoice/genrate" method="post" style="display: inline-block;">
            <input type="hidden" name="totalInvoiceAmount" value="<%=totalInvoice%>">
            <input type="hidden" name="jobId" value="<%=job._id%>">
            <input type="hidden" name="username" value="<%=job.username%>">
            <button type="submit" class="btn btn-lg btn-success shadow"> Genrate Invoice</button>

        </form>

        <button type="button" class="btn btn-lg btn-primary" data-toggle="modal" data-target="#exampleModal">
            Add additional Charges
        </button>

        <a href="" class="btn btn-lg btn-warning shadow"> Edit</a>
    </div>
    <div class="card p-4 shadow">
        <h1 class="alert alert-primary text-capitalize">job Details</h1>
        <div class="row">
            <div class="col-md-8">
                <%if(job.comment){%>
                <div class="card alert alert-warning">
                    <h4>Comment</h4>
                    <p><%=job.comment%></p>
                </div>
                <%}%>
            </div>
            <div class="col-md-4">
                <div class="headtext text-right">
                    <h2><%=job.companyId.companyName%></h2>
                <span class="">
                    <p><%=job.companyId.address.street%>, <%=job.companyId.address.suburb%>,
                        <%=job.companyId.address.postCode%></p>
                </span>
                <br>
                <strong>ABN :<%=job.companyId.bankDetails.ABN_number%> </strong>
            </div>
        </div>
    </div>
    <hr>

    <div class="row">
        <div class="col-md-4">
            <div class="headtext">
                <span class="alert alert-info p-2">Job Owner</span>

                <h2>Cormack Company</h2>
                <span class="">
                    <p><%=job.companyId.address.street%>, <%=job.companyId.address.suburb%>,
                        <%=job.companyId.address.postCode%></p>
                </span>

            </div>
            <br>
            <div class="headtext">
                <p><b>Job number : </b> <span class="badge badge-primary w-25 "> #<%=job.jobNumber%></span></p>

                <p><b>Job location : </b> <%=job.location%></p>
                <p><b>Job date : </b> <%=job.jobDate%></p>
            </div>
        </div>
        <div class="col-md-8"></div>

    </div>
    <table class="table table-bordered text-capitalize mt-4">
        <thead class="alert alert-primary">
            <tr>
                <th>Descripation</th>
                <th>area (Sqm)</th>
                <th>unit price</th>
                <th>total price AUD</th>

            </tr>
        </thead>
        <tbody>
            <tr>
                <td>houseslable</td>
                <td><%=job.jobSize%></td>
                <td><%=job.unitRate.toLocaleString("en-US", { style: "currency", currency: "USD" })%></td>
                <td><%=jobCharges.toLocaleString("en-US", { style: "currency", currency: "USD" })%></td>

            </tr>
            <tr>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
            </tr>
            <%if(job.additionalCharges.length>0){%>
            <%for(let charges of job.additionalCharges){%>
            <tr>
                <td></td>
                <td></td>
                <td><strong><%=charges.chargeInfo%></strong></td>
                <td><%=charges.charges.toLocaleString("en-US", { style: "currency", currency: "USD" })%></td>
            </tr>
            <%}%>
            <%}%>

            <tr>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
            </tr>
            <tr class="alert alert-dark">
                <td></td>
                <td></td>
                <td></td>
                <td></td>
            </tr>
            <tr>
                <td></td>
                <td></td>
                <td><strong>Subtotal:</strong></td>
                <td><%=subtotal.toLocaleString("en-US", { style: "currency", currency: "USD" })%></td>

            </tr>
            <tr>
                <td></td>
                <td><strong>GST</strong></td>
                <td><strong>10%</strong></td>

                <td><%=GST.toLocaleString("en-US", { style: "currency", currency: "USD" })%></td>

            </tr>
            <tr>
                <td></td>
                <td></td>
                <td><strong>Grand Total</strong></td>

                <td><%=totalInvoice.toLocaleString("en-US", { style: "currency", currency: "USD" })%></td>

            </tr>
        </tbody>
    </table>
    </div>
</section>
<section>
    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title alert alert-primary" id="exampleModalLabel">Additional Charges</h5>
                    <button type="button" class="close btn btn-outline-danger" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form action="/job/charges/" method="post" novalidate class="needs-validation">
                        <input type="hidden" name="jobId" value="<%=job._id%>">
                        <input type="hidden" name="companyId" value="<%=job.companyId._id%>">
                        <div class="form-group">
                            <label for="chargesInfo">Charges Info</label>
                            <input type="text" class="form-control" id="chargesInfo" name="chargesInfo" required
                                aria-describedby="emailHelp">
                            <div class="invalid-feedback">
                                Please provide a Charges Details
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="charges">charges</label>
                            <div class="input-group mb-2 mr-sm-2">
                                <div class="input-group-prepend">
                                    <div class="input-group-text">$</div>
                                </div>
                                <input type="number" required class="form-control" id="charges" name="charges"
                                    placeholder="charges">
                                <div class="invalid-feedback">
                                    Provide charges value
                                </div>
                            </div>
                        </div>
                        <div class="text-right">
                            <button type="submit" class="btn btn-primary">Update</button>

                        </div>
                    </form>
                </div>

            </div>
        </div>
    </div>
</section>