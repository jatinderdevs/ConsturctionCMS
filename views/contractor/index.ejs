<% layout('../includes/companyLayout.ejs') %>


<div class="infoBox">
    <h3 class="alert alert-dark">Contractors</h3>
    <div class="text-right my-2">
        <a href="/contractor/create" class="btn btn-success">Add New Contractor</a>
    </div>
    <div id="accdsordion">

        <%for(let c of contractors){%>
        <div class="card mb-3 <%=c.isActive?'':'alert-secondary'%>">
            <div class="card-header alert-success shadow " id="headingOne">
                <h5 class="mb-0">
                    <button class="btn text-capitalize" data-toggle="collapse" data-target="#" aria-expanded="true"
                        aria-controls="collapseOne">
                        <b> <%=c.conName%></b> &nbsp;<span
                            class="badge <%=c.isActive?'badge-success':'badge-danger'%>"><%=c.isActive?'Activate':'Deactive'%></span>
                    </button>
                </h5>
            </div>

            <div class=" card-body d-flex justify-content-between align-items-center">
                <div>

                    <strong>Contact Number : <%=c.conPhone%> </strong>
                    <br>
                    <strong>Email: <%=c.conEmail%> </strong>
                </div>
                <div class="text-center alert-secondary  p-2 rounded ">
                    <strong>Unit Price Rate</strong>
                    <h4 class="text-danger"><b>
                            <%=c.unitPriceRate.toLocaleString("en-US", { style: "currency", currency: "USD" })%></b>
                    </h4>
                </div>
                <div>
                    <a href="/contractor/edit/<%=c._id%>" class="btn btn-primary btn-sm">Edit</a>
                    <button type="button" class="btn btn-sm btn-outline-danger" data-toggle="modal"
                        data-target="#exampleModal">
                        Delete
                    </button>
                </div>

                <!-- modal pop up for delete button -->
                <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel"
                    aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header alert-danger">
                                <h5 class="modal-title " id="exampleModalLabel">Are you Sure to delete this
                                    item?</h5>

                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body">
                                <p>WARNING! deleting Contractor Will remove all the job details of realted
                                    to this
                                    Contractor
                                    <br>
                                    <small>you can also Deactive this Contractor instead removing</small>
                                </p>
                            </div>
                            <div class="modal-footer">
                                <form action="/contractor/remove" method="post">
                                    <input type="hidden" name="C_id" id="C_id" value="<%=c._id%>">
                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                    <button type="submit" class="btn btn-danger">Yes! Delete</button>
                                </form>

                            </div>
                        </div>
                    </div>
                </div>



            </div>
        </div>

        <%}%>

</div>
</div>